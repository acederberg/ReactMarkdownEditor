# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  # Config for the application runner.  
  # https://www.vagrantup.com/docs/multi-machine
  config.vm.define "app-runner" do |app|

    # Provisioning is to be done by ansible.
    # Using the windows hypervisor since I have windows pro

    app.vm.box = "generic/ubuntu2004"
    app.vm.hostname = "app-runner"
    app.vm.provider "hypervisor" do |hv|
      hv.memory = 2048
      hv.cpus = 1
    end

    # Because nginx will be the only container with an exposed port.
    # Only on localhost because this is the development version.

    app.vm.network "forwarded_port", guest: 443, host: 8080, host_ip: "127.0.0.1"
    app.vm.network "forwarded_port", guest: 9000, host: 9000, host_ip: "127.0.0.1"
    app.vm.network "forwarded_port", guest: 8000, host: 8000, host_ip: "127.0.0.1"
    app.vm.provision "shell" do |s|
      s.path = 'add_ansible.sh'
    end


  end

  config.vm.define "gitlab-runner" do |gl|
    
    gl.vm.box = "generic/ubuntu2004"
    gl.vm.hostname = "gitlab-runner"
    gl.vm.provider "vmware" do |vw|
      vw.memory = 4096
      vw.cpus = 1
    end
    gl.vm.provision "shell" do |s|
      s.path = 'add_ansible.sh'
    end

  end

end
